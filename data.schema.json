{
    "title": "LinkStache Schema",
    "description": "Defines format for data",
    "type": "object",
    "properties": {
        "profile": {
            "type": "object",
            "properties": {
                "picture": {
                    "description": "URL/path to image for profile",
                    "type": "string"
                },
                "name": {
                    "description": "Display name for page",
                    "type": "string"
                },
                "bio": {
                    "description": "Short bio describing page",
                    "type": "string"
                }
            },
            "required": ["picture", "name"]
        },
        "links" : {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "text": {
                        "description": "Text to show for link",
                        "type": "string"
                    },
                    "link": {
                        "description": "URL to link to",
                        "type": "string"
                    },
                    "icon": {
                        "description": "Optional icon to show. Must be the class(es) for a Font Awesome icon",
                        "type": "string"
                    }
                },
                "required": ["text", "link"]
            }
        }
    }
  }