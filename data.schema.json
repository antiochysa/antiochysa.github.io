{
    "title": "LinkStache Schema",
    "description": "Defines format for data",
    "type": "object",
    "properties": {
        "profile": {
            "type": "object",
            "properties": {
                "picture": {
                    "description": "URL/path to image for profile",
                    "type": "string"
                },
                "name": {
                    "description": "Display name for page",
                    "type": "string"
                },
                "bio": {
                    "description": "Short bio describing page",
                    "type": "string"
                }
            },
            "required": ["picture", "name"]
        },
        "links" : {
            "type": "array",
            "items": {
                "anyOf": [
                    {
                        "type": "object",
                        "properties": {
                            "text": {
                                "description": "Text to show for link",
                                "type": "string"
                            },
                            "link": {
                                "description": "URL to link to",
                                "type": "string"
                            },
                            "icon": {
                                "description": "Optional icon to show. Must be the class(es) for a Font Awesome icon",
                                "type": "string"
                            }
                        },
                        "required": ["text", "link"]
                    },
                    {
                        "type": "object",
                        "properties": {
                            "section": {
                                "description": "Section header text",
                                "type": "string"
                            }
                        }
                    }
                ]
                
            }
        },
        "style": {
            "type": "object",
            "properties": {
                "bgColor": {
                    "description": "Color to use for background in #rrggbb",
                    "type": "string",
                    "pattern": "#[0-9a-fA-F]{6,8}"
                },
                "circleProfile": {
                    "description": "If true, profile picture will be a cirlce (as opposed to square)",
                    "type": "boolean"
                },
                "buttonRadius": {
                    "description": "Radius of corners for buttons. 0=square, ~10=rounded, 1000=circle",
                    "type": "integer"
                },
                "outlinedButton": {
                    "description": "If set, button will be transparent with an outline. False fills the button",
                    "type": "boolean"
                },
                "font": {
                    "description": "The name of the font to use from Google Fonts",
                    "type": "string"
                }
            }
        }
    },
    "additionalProperties": false
  }